# ===========================================
# FlowBotomat - Environment Variables
# ===========================================
# Rename this file to .env and fill in your values

# App Settings
NODE_ENV=development
APP_URL=http://localhost:3748
APP_PORT=3748

# Database (PostgreSQL)
DB_HOST=db
DB_PORT=5451
DB_NAME=flowbotomat
DB_USER=flowbotomat_user
DB_PASSWORD=your_strong_password_here

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_chars

# Encryption Key (for API keys, generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# SMTP Settings (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Frontend API URL
VITE_API_URL=http://localhost:4000/api

# WAHA Settings (System WhatsApp API)
WAHA_BASE_URL=https://your-waha-server.com
WAHA_API_KEY=your_waha_api_key
